{
  "name": "@tpm/monorepo",
  "private": true,
  "version": "1.0.0",
  "comments": {
    "turbo-filter-template": "Exclude the template package from pipeline runs"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build --filter=!@tpm/template --output-logs=new-only",
    "lint": "turbo run lint --filter=!@tpm/template --output-logs=new-only"
  },
  "devDependencies": {
    "esbuild": "0.15.5",
    "eslint": "8.23.0",
    "prettier": "2.7.1",
    "turbo": "1.4.3",
    "typescript": "4.8.2"
  }
}
