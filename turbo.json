{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": [".env", ".prettierrc.js", "tsconfig.json"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "lint": {
      "dependsOn": ["format"],
      "inputs": ["**/*.{js,jsx,ts,tsx}"],
      "outputs": []
    },
    "format": {
      "inputs": ["**/*.{js,jsx,ts,tsx}", "**/*.{json,md,yml,yaml}"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
