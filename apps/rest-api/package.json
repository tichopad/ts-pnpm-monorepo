{
  "name": "@tpm/rest-api",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "TIMING=1 eslint --fix --cache --ext ts src",
    "build": "tsc --noEmit && rm -rf dist && esbuild src/main.ts --outdir=dist --bundle --minify --sourcemap --platform=node --target=node18",
    "dev": "nodemon --watch src -e js,ts,json -x \"esmo src/main.ts\"",
    "start": "node ./dist/main.js"
  },
  "eslintConfig": {
    "extends": "@tpm/eslint-config"
  },
  "devDependencies": {
    "@tpm/eslint-config": "workspace:*",
    "@tpm/tsconfig": "workspace:*",
    "@types/node": "18.7.13",
    "esmo": "0.16.3",
    "nodemon": "2.0.19"
  },
  "dependencies": {
    "@tpm/utils": "workspace:*",
    "fastify": "4.5.3"
  }
}
